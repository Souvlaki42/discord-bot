{
  "name": "discord-bot",
  "module": "index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "debug": "bun --inspect src/index.ts",
    "start": "bun dist/index.js",
    "pretty": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "build": "bun build --entrypoints ./src/index.ts --outdir ./dist --target bun"
  },
  "type": "module",
  "dependencies": {
    "discord.js": "^14.18.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "bun-types": "^1.2.4",
    "prettier": "^3.5.2",
    "typescript": "^5.8.2",
    "@types/bun": "latest"
  },
  "private": true
}
